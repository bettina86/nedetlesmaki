<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.geekygoblin</groupId>
    <artifactId>nedetlesmaki</artifactId>
    <version>0.1-SNAPSHOT</version>
    <name>nedetlesmaki</name>
    <packaging>pom</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <modules>
        <module>game</module>
        <module>lwjgl-nuit</module>
        <module>libtiled-jaxb</module>
        <module>tablelayout</module>
    </modules>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.lwjgl.lwjgl</groupId>
                <artifactId>lwjgl</artifactId>
                <version>2.9.0</version>
            </dependency>
            <dependency>
                <groupId>org.lwjgl.lwjgl</groupId>
                <artifactId>lwjgl_util</artifactId>
                <version>2.9.0</version>
            </dependency>
            <dependency>
                <groupId>org.jcraft</groupId>
                <artifactId>jorbis</artifactId>
                <version>0.0.17</version>
            </dependency>
            <dependency>
                <groupId>com.google.protobuf</groupId>
                <artifactId>protobuf-java</artifactId>
                <version>2.4.1</version>
            </dependency>
            <dependency>
                <groupId>net.onedaybeard.artemis</groupId>
                <artifactId>artemis-odb</artifactId>
                <version>0.4.0</version>
            </dependency>
            <dependency>
                <groupId>org.l33tlabs.twl</groupId>
                <artifactId>pngdecoder</artifactId>
                <version>1.0</version>
            </dependency>
            <dependency>
                <groupId>im.bci</groupId>
                <artifactId>libtiled-jaxb</artifactId>
                <version>0.1-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>im.bci</groupId>
                <artifactId>lwjgl-nuit</artifactId>
                <version>0.1-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.esotericsoftware</groupId>
                <artifactId>tablelayout</artifactId>
                <version>0.1-SNAPSHOT</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <profiles>
        <profile>
            <id>deb</id>
            <properties>
                <lwjgl.jar.path>/usr/share/java/lwjgl.jar</lwjgl.jar.path>
                <lwjgl_util.jar.path>/usr/share/java/lwjgl_util.jar</lwjgl_util.jar.path>
                <jorbis.jar.path>/usr/share/java/jorbis.jar</jorbis.jar.path>
                <jogg.jar.path>/usr/share/java/jogg.jar</jogg.jar.path>
                <protobuf.jar.path>/usr/share/java/protobuf-java.jar</protobuf.jar.path>
            </properties>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.lwjgl.lwjgl</groupId>
                        <artifactId>lwjgl</artifactId>
                        <version>2.7.1</version>
                        <scope>system</scope>
                        <systemPath>${lwjgl.jar.path}</systemPath>
                    </dependency>
                    <dependency>
                        <groupId>org.lwjgl.lwjgl</groupId>
                        <artifactId>lwjgl_util</artifactId>
                        <version>2.7.1</version>
                        <scope>system</scope>
                        <systemPath>${lwjgl_util.jar.path}</systemPath>
                    </dependency>
                    <dependency>
                        <groupId>org.jcraft</groupId>
                        <artifactId>jorbis</artifactId>
                        <version>0.0.17</version>
                        <scope>system</scope>
                        <systemPath>${jorbis.jar.path}</systemPath>
                    </dependency>
                    <dependency>
                        <groupId>org.jcraft</groupId>
                        <artifactId>jogg</artifactId>
                        <version>0.0.17</version>
                        <scope>system</scope>
                        <systemPath>${jogg.jar.path}</systemPath>
                    </dependency>
                    <dependency>
                        <groupId>com.google.protobuf</groupId>
                        <artifactId>protobuf-java</artifactId>
                        <version>2.4.1</version>
                        <scope>system</scope>
                        <systemPath>${protobuf.jar.path}</systemPath>
                    </dependency>
                    <dependency>
                        <groupId>net.onedaybeard.artemis</groupId>
                        <artifactId>artemis-odb</artifactId>
                        <version>0.4.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.l33tlabs.twl</groupId>
                        <artifactId>pngdecoder</artifactId>
                        <version>1.0</version>
                    </dependency>
                    <dependency>
                        <groupId>im.bci</groupId>
                        <artifactId>libtiled</artifactId>
                        <version>0.1-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>im.bci</groupId>
                        <artifactId>lwjgl-nuit</artifactId>
                        <version>0.1-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>com.esotericsoftware</groupId>
                        <artifactId>tablelayout</artifactId>
                        <version>0.1-SNAPSHOT</version>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
    </profiles>
</project>

